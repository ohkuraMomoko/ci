    <script src="~/Scripts/slick.min.js"></script>
    <script>
    $(function(){
        $("#serviceBox").slick({
            arrows: false,
            dots: false,
            infinite: true,
            speed: 500,
            fade: true,
            cssEase: 'linear',
            swipe: false
        });
        $(".service-tab .tab-item").on('click', function () {
            $(".service-tab .tab-item").removeClass("active");
            $(this).addClass("active");
            var target = $(this).data("service");
            $("#serviceBox").slick('slickGoTo', target);
        })
        $("#mobileService").on('change', function () {
            $("#serviceBox").slick('slickGoTo', $(this).val());
        });
        

    });
    </script>
