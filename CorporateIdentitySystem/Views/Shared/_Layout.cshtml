@{
    ViewBag.Title = "企業識別系統CIS";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Language" content="zh-TW">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="chailease">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <!-- <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;300;400;500;700;900&display=swap" rel="stylesheet"> -->
    <title>@ViewBag.Title</title>
    @RenderSection("header", required: false)
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/demo.min.css")
    
</head>
<body>
    <div class="body-containter">
        @{
            Html.RenderPartial("~/Views/Components/_DemoMenu.cshtml");
        }
        <div class="main">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#burgerDemo").click(function(){
            $("#menuDemo").toggleClass("open");
        })
    </script>
</body>
</html>